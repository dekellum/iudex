# -*- ruby -*-

require 'rubygems'
require 'bundler/setup'

task :default => [ :gen ]

directory 'svg'

FileList[ '_dot/*.dot' ].each do |dot|
  svg = dot.sub( /(\.dot)$/, '.svg' ).sub( /^(_dot)/, 'svg' )
  png = dot.sub( /(\.dot)$/, '.png' ).sub( /^(_dot)/, 'svg' )

  file svg => [ dot, 'svg' ] do
    sh "dot -Tsvg -o #{svg} #{dot}"
  end

  file png => [ dot, 'svg' ] do
    sh "dot -Tpng -o #{png} #{dot}"
  end

  task :dot => [ svg, png ]
end

task :clean do
  rm_rf %w[ svg _site ]
end

desc "Run Jekyll to generate files"
task :gen => [ :dot ] do
  require 'jekyll'
  ARGV.replace( %w[ build ] )
  load Gem.bin_path( 'jekyll', 'jekyll' )
end

desc "Run auto-regenerating Jekyll server"
task :server => [ :dot ] do
  require 'jekyll'
  ARGV.replace( %w[ serve --watch ] )
  load Gem.bin_path( 'jekyll', 'jekyll' )
end

DEST = "pica:~/public_html/iudex/"

task :diff => [ :gen ]  do
  sh "rsync -n -rc -i _site/ #{DEST}"
end

task :publish => [ :gen ] do
  sh "rsync -rc -i _site/ #{DEST}"
end
