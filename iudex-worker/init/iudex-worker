require 'rubygems'

gem( "iudex-worker", "= 1.0.0" )

module IudexInitScript

  require 'rjack-logback'
  include RJack
  Logback.config_console( :full => true, :thread => true, :mdc => "uhash" )

  require 'iudex-worker'
  include Iudex
  Core::Config.parse_options

  agent = Worker::Agent.new
  agent.run

end
